{
    "name": "defstudio/actions",
    "description": "Helpers methods for Laravel Actions",
    "keywords": [
        "defstudio",
        "laravel",
        "actions"
    ],
    "homepage": "https://github.com/defstudio/actions",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Ivona",
            "email": "fabio.ivona@defstudio.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^11.0|^12.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2.1",
        "nunomaduro/collision": "^8.0",
        "nunomaduro/larastan": "^2.0 | ^3.0",
        "orchestra/testbench": "^9.0 | ^10.0",
        "pestphp/pest": "^3.0 | ^4.0",
        "pestphp/pest-plugin-laravel": "^3.0 | ^4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.0 | ^12.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "DefStudio\\Actions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DefStudio\\Actions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --no-coverage",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "coverage": "@test:unit --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DefStudio\\Actions\\ActionsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
